@page
@model RegisterModel
@{
    ViewData["Title"] = "Реєстрація";
}

<div class="row justify-content-center align-items-center p-5">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post" class="w-50 border border-4">
            <h2>Створіть новий акаунт.</h2>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating p-1">
                <input asp-for="Input.Name" class="form-control" autocomplete="Ім'я користувача'" aria-required="true" />
                <label asp-for="Input.Name"></label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
        <div class="form-floating p-1">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" aria-required="true" />
                <label asp-for="Input.Email"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
        <div class="form-floating p-1">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
        <div class="form-floating p-1">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="p-1">
        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Зареєструватись</button>
        </div>
        </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
